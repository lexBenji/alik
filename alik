#!/usr/bin/python3

import time,os
from sys import argv

if len(argv) == 1:
    exit(127)

state=0
word=""
write=False
writeln=False
loop=False
loopset=False
lline=-1
_str=""
st=""
vname=""
value=""
quote=""
var={}
const={
"cls":"\33c",
"reset":"\33[0m",
"fg_black":"\33[30m",
"bg_black":"\33[40m",
"fg_red":"\33[31m",
"bg_red":"\33[41m",
"fg_green":"\33[32m",
"bg_green":"\33[42m",
"fg_yellow":"\33[33m",
"bg_yellow":"\33[43m",
"fg_blue":"\33[34m",
"bg_blue":"\33[44m",
"fg_magenta":"\33[35m",
"bg_magenta":"\33[45m",
"fg_cyan":"\33[36m",
"bg_cyan":"\33[46m",
"fg_white":"\33[37m",
"bg_white":"\33[47m",
"reverse":"\33[7m"
}

file=""
fset=False

line=0
col=0

version="2.00"

valid_flags=[
      "-v",
      "-version",
      "-h",
      "-help"
      ]

keyword=[
      "write",
      "writeln",
      "var",
      "sleep",
      "loop",
      "end"
      ]

cur=""

for arg in argv:
   if arg.endswith(".alik"):
      file=arg
      fset=True
   elif arg.endswith(".al"):
      file=arg
      fset=True
   elif arg.startswith("-") and arg in valid_flags:
      if arg == "-v" or arg == "-version":
         print("Current version: {0}".format(version))
         exit(127)
      elif arg == "-h" or arg == "-help":
         print(valid_flags)
         exit(128)

if not os.path.exists(file):
    exit(105)
if fset==False:
    exit(105)

with open(file) as rf:
    rf=rf.readlines()
    while True:
        if line==len(rf):
            break
        cur=rf[line][col]
        if state==0:
            word+=cur
            if word=="write":
                write=True
                word=""
            elif word=="ln":
                if not write:
                    exit(105)
                write=False
                writeln=True
                word=""
            elif word=="loop":
                loop=True
                if loopset:
                    exit(105)
                loopset=True
                lline=line
                word=""
            elif word=="wait ":
                state=8
                word=""
            elif word=="end":
                if loop==True:
                    line=lline
                    word=""
                    loopset=False
                else:
                    exit(105)
            elif word=="var ":
                state=2
                vset=True
                word=""
            elif word=="const ":
                state=2.5
                vset=True
                word=""
            elif cur=="$":
                state=5
                word=""
            elif cur=="\n":
                line+=1
                col=-1
                word=""
            elif cur=="#":
                state=6
                word=""
            elif cur=="{":
                state=7
                word=""
            elif cur in "\"'":
                state=1
                quote=cur
                word=""
        elif state==1:
            if quote==cur:
                if write:
                    print(_str,end="")
                    write=False
                elif writeln:
                    print(_str)
                    writeln=False
                else:
                    exit(105)
                _str=""
                quote=""
                state=0
            else:
                _str+=cur
        elif state==2:
            if cur==" ":
                if vname in list(const.keys()):
                    exit(105)
                state=3
            else:
                vname+=cur
        elif state==2.5:
            if cur==" ":
                if vname in list(const.keys()) or vname in list(var.keys()):
                    exit(105)
                state=3.5
            else:
                vname+=cur
        elif state==3:
            if cur=="\n" or cur==" ":
                if value=="true":
                    var[vname]=value
                elif value=="false":
                    var[vname]=value
                else:
                    try:
                        var[vname]=int(value)
                    except:
                        var[vname]=float(value)
                if cur=="\n":
                    line+=1
                    col=-1
                vset=False
                vname=""
                value=""
                state=0
            elif cur in "\"'":
                quote=cur
                state=4
            else:
                value+=cur
        elif state==3.5:
            if cur=="\n" or cur==" ":
                if value=="true":
                    const[vname]=value
                elif value=="false":
                    const[vname]=value
                else:
                    try:
                        const[vname]=int(value)
                    except:
                        const[vname]=float(value)
                if cur=="\n":
                    line+=1
                    col=-1
                vset=False
                vname=""
                value=""
                state=0
            elif cur in "\"'":
                quote=cur
                state=4.5
            else:
                value+=cur
        elif state==4:
            if cur==quote:
                state=0
                var[vname]=value
                vname=""
                value=""
            else:
                value+=cur
        elif state==4.5:
            if cur==quote:
                state=0
                const[vname]=value
                vname=""
                value=""
            else:
                value+=cur
        elif state==5:
            if cur=="\n" or cur==" ":
                if vname in list(var.keys()) and vname in list(const.keys()):
                    exit(105)
                elif vname in list(var.keys()):
                    if write:
                        print(var[vname],end="")
                        write=False
                    elif writeln:
                        print(var[vname])
                        writeln=False
                elif vname in list(const.keys()):
                    if write:
                        print(const[vname],end="")
                        write=False
                    elif writeln:
                        print(const[vname])
                        writeln=False
                line+=1
                col=-1
                state=0
                vname=""
            else:
                vname+=cur
        elif state==6:
            if cur=="\n":
                state=0
                line+=1
                col=-1
        elif state==7:
            if cur=="\n":
                line+=1
                col=-1
            elif cur=="}":
                state=0
        elif state==8:
            if cur=="\n" or cur==" ":
                line+=1
                col=-1
                time.sleep(float(st))
                st=""
                state=0
            elif cur=="$":
                state=9
            else:
                st+=cur
        elif state==9:
            if cur=="\n" or cur==" ":
                time.sleep(float(var[vname]))
                state=0
                vname=""
                if cur=="\n":
                    col=-1
                    line+=1
            else:
                vname+=cur
        col+=1
